{
  "name": "2partscut",
  "version": "1.0.4",
  "description": "A client-side web application to split videos into two equal parts",
  "scripts": {
    "start": "node src/server/server.js",
    "dev": "nodemon src/server/server.js",
    "build": "node src/build.js",
    "build:prod": "node src/build.js --prod",
    "start:prod": "npm run build:prod && node src/server/server.js",
    "build:watch": "nodemon --watch src/typescript --ext ts --exec 'npm run build'",
    "deploy:wasmer": "wasmer deploy",
    "deploy:wasmer:sdk": "node src/deploy-wasmer.js"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "split",
    "client-side",
    "webassembly",
    "javascript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.6",
    "@wasmer/sdk": "^0.9.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@hcaptcha/types": "^1.0.4",
    "@types/node": "^22.15.24",
    "esbuild": "^0.25.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
